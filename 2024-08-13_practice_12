-- https://leetcode.com/problems/managers-with-at-least-5-direct-reports/?envType=study-plan-v2&envId=top-sql-50

-- Example
WITH staff_avgCTE AS (
 SELECT ROUND(AVG(es.salary), 2) AS avg_salary
    FROM employees.titles AS et 
    INNER JOIN employees.salaries AS es  ON et.emp_no = es.emp_no
    WHERE et.title LIKE '%Staff%'
)
SELECT *
FROM salaries  AS es
CROSS JOIN staff_avgCTE AS svc
WHERE es.salary > svc.avg_salary
;

